{% extends 'base.html.twig' %}

{% block title %}Show categroy{% endblock %}

{% block body %}
    <table>
        <tr>
            <td>ID: </td>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <td>Name: </td>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <td>Description: </td>
            <td>{{ category.description }}</td>
        </tr>
        <tr>
            <td>Actions: </td>
            <td>
                <a href="{{ url('category.update', {'id': category.id}) }}">Edit</a> |
                <a href="{{ url('category.delete', {'id': category.id}) }}">Delete</a>
            </td>
        </tr>
    </table>
{% endblock %}
